# CONFIGURAÇÕES DO BANCO DE DADOS - TEMPLATE
# Copie este arquivo para .env e configure com seus dados reais

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/apostapro_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=apostapro_db
DB_USER=username
DB_PASSWORD=password

# Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here

# FBRef Scraping Settings (existing)
FBREF_BASE_URL=https://fbref.com
FBREF_DELAY_MIN=1.0
FBREF_DELAY_MAX=3.0

# Monitoring
ENABLE_DB_MONITORING=true
METRICS_COLLECTION_INTERVAL=300
